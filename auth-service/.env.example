# Auth Service Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5433/okkazo_auth_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password-here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_NAME=auth_events

# JWT Configuration
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=2592000000

# Eureka Server URL
EUREKA_URL=http://localhost:8761/eureka/
