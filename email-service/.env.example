# Environment
NODE_ENV=development

# Server Configuration
PORT=8083
SERVICE_NAME=email-service
SERVICE_HOST=localhost

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Settings
FROM_EMAIL=noreply@okkazo.com
FROM_NAME=Okkazo Platform

# Frontend URLs
FRONTEND_URL=http://localhost:3000
VERIFICATION_URL=http://localhost:3000/verify-email
RESET_PASSWORD_URL=http://localhost:3000/reset-password

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=email-service
KAFKA_GROUP_ID=email-service-group
KAFKA_TOPIC=auth_events

# Eureka Configuration
EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_INSTANCE_PORT=8083
EUREKA_REGISTER_WITH_EUREKA=true
EUREKA_FETCH_REGISTRY=true

# Logging
LOG_LEVEL=info

# Email Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5000
